# platform :ios, '9.0'

def shared_pods
    pod 'Bond'
    pod "PromiseKit", "~> 6.8"
    pod 'Charts'
    pod 'SwiftLint'
    pod 'lottie-ios'
    pod 'Swinject'
    pod 'Differ'
    pod 'paper-onboarding'
    pod 'NSVLocalizationKit'
end


target 'MyWork' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!
  shared_pods
  # Pods for MyWork
end

target 'SwiftBySundell' do
    # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
    use_frameworks!
    shared_pods
    # Pods for MyWork
end
